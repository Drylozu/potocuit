{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Potocuit Configuration",
	"description": "The configuration that is contained inside the file `.potorc.json`",
	"type": "object",
	"additionalProperties": false,
	"properties": {
		"$schema": {
			"description": "A field for the [JSON schema](https://json-schema.org/) specification",
			"type": [
				"string",
				"null"
			]
		},
		"locations": {
			"description": "Modules and their paths",
			"type": "object",
			"properties": {
				"base": {
					"type": "string"
				},
				"output": {
					"type": "string"
				},
				"commands": {
					"type": "string"
				},
				"langs": {
					"type": "string"
				},
				"events": {
					"type": "string"
				},
				"templates": {
					"type": "string"
				}
			},
			"required": [
				"base",
				"commands",
				"output"
			],
			"additionalProperties": false
		},
		"variables": {
			"description": "Environment variables of application",
			"type": "string",
			"default": "env.js"
		},
		"debug": {
			"type": "boolean",
			"default": false
		}
	}
}